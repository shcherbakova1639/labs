using System;
using System.Linq;


int[] numbers = { 3, 10, -7, 8, 4, 5, -9 };
var n = numbers.Where(x => x < 0).Count();
var sum = numbers.Where(x => x < 0).Sum();

Console.Write("Кількість від'ємних елементів: ");
Console.WriteLine(n);
Console.Write("Сума від'ємних елементів: ");
Console.WriteLine(sum);

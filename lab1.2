using System;
using System.Linq;
using System.Collections.Generic;
using System.Text.Json;

class Program
{
    static void Main(string[] args)
    {
        Dictionary<string, int> myDict = new Dictionary<string, int> {
            { "Math", 81 },
            { "Physics", 83 },
            { "Chemistry", 87 }
        };

        List<KeyValuePair<string, int>> sortedDict = myDict.OrderByDescending(x => x.Value).ToList();

        string json = JsonSerializer.Serialize(sortedDict);

        System.IO.File.WriteAllText(@"C:\example\sorted_dict.json", json);

        Console.WriteLine("Sorted dictionary saved to JSON file.");
    }
}
